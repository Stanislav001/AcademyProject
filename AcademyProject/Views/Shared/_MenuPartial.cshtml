@inject SignInManager<Models.Models.User> singInManager;

<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="my-nav-link nav-link" asp-controller="Home" asp-action="Index"><span class="sidebar-icon"><i class="fa fa-home"></i></span> Home</a>
                </li>
                <li class="nav-item">
                    <a class="my-nav-link nav-link" asp-controller="Home" asp-action="About"><span class="sidebar-icon"><i class="fa fa-info"></i></span> About Us</a>
                </li>
                <li class="nav-item">
                    <a class="my-nav-link nav-link" asp-controller="Course" asp-action="Index"><span class="sidebar-icon"><i class="fa fa-book"></i></span> Courses</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Post" asp-action="Index" asp-route-id="@singInManager"><span class="sidebar-icon"><i class="fa fa-comment"></i></span> Blog</a>
                </li>
                @if (singInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="my-nav-link nav-link" asp-controller="Dashboard" asp-action="Index"><span class="sidebar-icon"><i class="fa fa-user"></i></span> Dashboard</a>
                    </li>
                }
                <li class="nav-item">
                    <partial name="_LoginPartial" />
                </li>
            </ul>
        </div>
    </nav>
</div>