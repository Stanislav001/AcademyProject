@model UserViewModel
<html>
<head>
    <title>Update @Model.UserName</title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/UserCss/userStyle.css" rel="stylesheet" />
</head>
<body>
    <form asp-action="Update" enctype="multipart/form-data">
        <div class="container">
            <div class="view-account">
                <section class="module">
                    <div class="module-inner">
                        <div class="side-bar">
                            <div class="user-info">
                                <img class="cardPhoto" src="@("~/ImageForUser/" + Model.ImageName)" asp-append-version="true" style="width:30%;" />
                                <ul class="meta list list-unstyled">
                                    <li class="name">
                                        @Model.UserName
                                        <label class="label label-info">@Model.Profession</label>
                                    </li>
                                    <li class="email">@Model.Email</li>
                                </ul>
                            </div>
                        </div>
                        <div class="content-panel">
                            <form class="form-horizontal">
                                <fieldset class="fieldset">
                                    <h3 class="fieldset-title">Personal Info</h3>
                                    <div class="form-group avatar">
                                        <figure class="figure col-md-2 col-sm-3 col-xs-12">
                                            <img class="cardPhoto" src="@("~/ImageForUser/" + Model.ImageName)" asp-append-version="true" />
                                        </figure>
                                        <div class="form-inline col-md-10 col-sm-9 col-xs-12">
                                            <input class="form-control" asp-for="@Model.ImageFile" accept="image/*" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label" asp-for="UserName">User Name</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input class="form-control" asp-for="UserName" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label" asp-for="Country">Country</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input class="form-control" asp-for="Country" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-2 col-sm-3 col-xs-12 control-label" asp-for="Profession">Profession</label>
                                        <div class="col-md-10 col-sm-9 col-xs-12">
                                            <input type="text" class="form-control" asp-for="Profession" />
                                        </div>
                                    </div>
                                </fieldset>
                                <hr>
                                <div class="form-group">
                                    <div class="col-md-10 col-sm-9 col-xs-12 col-md-push-2 col-sm-push-3 col-xs-push-0">
                                        <input class="btn btn-primary" type="submit" value="Update Profile">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        </form>
</body>
</html>