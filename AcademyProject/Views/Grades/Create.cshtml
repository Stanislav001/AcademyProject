@model GradeViewModel

@{
    ViewData["Title"] = "Index";
}

<h4>Add new grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentGrade" class="control-label"></label>
                <input asp-for="StudentGrade" class="form-control" />
                <span asp-validation-for="StudentGrade" class="text-danger"></span>
            </div>
            <label asp-for="CourseId" class="control-label required"></label>
            <select asp-for="CourseId" class="form-control">

                @foreach (var user in this.ViewBag.Courses)
                {
                    <option value="@user.Id">@user.UserName</option>
                }
            </select>
            <span asp-validation-for="CourseId" class="text-danger"></span>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>