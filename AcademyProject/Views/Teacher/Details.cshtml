@model TeacherViewModel

@{ ViewData["Title"] = $"{Model.FirstName} - Details"; }

<div class="d-flex justify-content-between align-items-center" style="border-bottom: 1px solid white">
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    </div>
    <div>
        <h1><b>@Model.FirstName</b></h1>
    </div>
    <div>
        <a class="btn btn-outline-danger" data-toggle="modal" data-target="#modal">
            Delete
        </a>
    </div>
</div>
<div class="mt-5">
    <textarea class="w-100" style="height: 300px; color: black; background-color: silver; font-size: large; border-radius: 1%">@Model.FirstName</textarea>
</div>

<partial name="TeacherPartials\_TeacherDeleteModel" model="@Model" />

