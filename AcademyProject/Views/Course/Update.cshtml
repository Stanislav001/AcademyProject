@model CourseViewModel

@{ ViewData["Title"] = $"Update - {Model.CourseName}"; }

<div class="d-flex justify-content-between align-items-center" style="border-bottom: 1px solid white">
    <div>
        <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
    </div>
    <div>
        <h1>Update: <b>@Model.CourseName</b></h1>
    </div>
</div>
<div class="row mt-5">
    <div class="mx-auto" style="width: 40%">
        <form asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <br />
                <textarea asp-for="Description" class="w-100" style="height: 200px"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label"></label>
                <br />
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <br />
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.ImageFile" class="control-label"></label>
                <br />
                <input class="font-weight-bold" asp-for="@Model.ImageFile" accept="image/*" />
                <span asp-validation-for="@Model.ImageFile" class="text-danger"></span>
            </div>
            
            <div class="form-group text-center">
                <input class="btn btn-danger w-50 mt-2" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>