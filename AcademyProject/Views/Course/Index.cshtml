@model IEnumerable<CourseViewModel>
<html>
<head>
    @{ ViewData["Title"] = "Courses"; }
</head>

<style>
    .container{
        display:inline-block;
    }
    .movieCard {
        display: inline-block;
        text-align: center;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        max-width: 600px;
        max-height: 800px;
        margin-left: 2%;
        margin-top: 3%;
        font-family: arial;
    }

    .movieCard:hover {
        transform: translateY(-30px);
    }

    .cardPhoto {
        width: 300px;
        height: 300px;
    }

    .movieCard h1, p {
        color: black;
    }

</style>
<body>
    <a class="btn btn-outline-danger" asp-action="Create">Create Course</a>


<div class="container">
    @foreach (var item in Model)
    {
    <div class="movieCard">
        <img class="cardPhoto" src="@("~/ImageForCourse/" + item.ImageName)" asp-append-version="true" />
        <h1>@item.CourseName</h1>
        <p>Price: @item.Price</p>
        <p>Duration: @item.Duration months</p>
        <a asp-controller="Course" asp-action="GetCourseById" asp-route-id="@item.Id" class="btn btn-primary mx-1">Read More</a>
    </div>
    }
</div>

</body>
</html>