@model List<CourseViewModel>

<table id="context" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price
            </th>
            <th>
                Duration
            </th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="20%">@item.CourseName</td>
                <td width="20%">@item.Description</td>
                <td width="20%">@item.Price</td>
                <td width="20%">@item.Duration</td>
                <td>
                    <a asp-controller="Course" asp-action="DeleteWorker" asp-route-id="@item.Id" class="btn btn-primary mx-1">Del</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-controller="Course" asp-action="AddWorker" class="btn btn-primary mx-1">Добавете нов потребител</a>
</div>