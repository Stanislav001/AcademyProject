@model UserViewModel

<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.0/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<link href="~/css/DashCss/dashStyle.css" rel="stylesheet" />
<script src="https://use.fontawesome.com/07b0ce5d10.js"></script>

<div class="page-topbar">
    <div class="quick-area">
        <ul class="pull-right info-menu user-info">
            <li class="profile">
                <a href="#" data-toggle="dropdown" class="toggle" aria-expanded="false">
                    <img class="cardPhoto" src="@("~/ImageForUser/" + Model.ImageName)" asp-append-version="true" />
                    <span>@Model.UserName </span>
                </a>
                <ul class="dropdown-menu profile fadeIn ">
                    <li>
                        <a class="options-bar" asp-controller="User" asp-action="Details" asp-route-id="@Model.Id">
                            Profile
                        </a>
                    </li>

                    <li class="last">
                        <a class="my-nav-link nav-link" asp-controller="Home" asp-action="Index">Back</a>
                    </li>
                </ul>


            </li>
        </ul>

    </div>
</div>

<div class="page-sidebar expandit">
    <div class="sidebar-inner" id="main-menu-wrapper">
        <div class="profile-info row ">
            <div class="profile-image ">
                <a href="ui-profile.html">

                </a>
            </div>
            <div class="profile-details">
                <h3>
                    <a href="ui-profile.html">@Model.UserName</a>
                </h3>
                <p class="profile-title">@Model.Profession</p>

            </div>
        </div>

        <ul class="wraplist" style="height: auto;">
            <li><a href=""><span class="sidebar-icon"><i class="fa fa-dashboard"></i></span> <span class="menu-title">Dashboard</span></a></li>
            <li><a class="my-nav-link" asp-controller="Course" asp-action="Index"><span class="sidebar-icon"><i class="fa fa-bullseye"></i></span><span class="menu-title">Manage Courses</span></a></li>
            <li><a class="my-nav-link" asp-controller="Teacher" asp-action="Index"><span class="sidebar-icon"><i class="fa fa-users"></i></span> <span class="menu-title">Manage Teachers</span></a></li>
            <li><a class="my-nav-link" asp-controller="Student" asp-action="Index"><span class="sidebar-icon"><i class="fa fa-calendar"></i></span><span class="menu-title">Manage Students</span></a></li>
            <li><a class="my-nav-link" asp-controller="Student" asp-action="Index"><span class="sidebar-icon"><i class="fa fa-users"></i></span> <span class="menu-title">Teacher Dashboard</span></a></li>
            <li> <a class="my-nav-link nav-link" asp-controller="Home" asp-action="Index"><span class="sidebar-icon"><i class="fa fa-lock"></i></span> <span class="menu-title">Sign Out</span></a></li>
        </ul>
    </div>
</div>


<section id="main-content">
    <section class="wrapper main-wrapper row">
        <div class="col-md-6">
            <section class="box">
                <h5>Student List</h5>

                <button id="students" class="btn btn-danger">Show me Students</button>
                <div id="content">

                </div>
            </section>
        </div>
        <div class="col-md-6">
            <section class="box">
                <h5>Course List</h5>
            </section>
        </div>

        <div class="clearfix"></div>

        <div class="col-md-12">
            <section class="box">
                <h5>Post List</h5>
            </section>
        </div>

    </section>
</section>

@section Scripts{
    <script>
        $("#students").on("click", function () {
            $.ajax({
                method: "GET",
                url: "Dashboard/Students",
                success: function (data) {
                    $("#content").html(data);
                },
                error: function (err) {
                    alert(err);
                }
            });
        })
    </script>
}